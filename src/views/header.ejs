<!DOCTYPE html>
<html>
<head>
  <title>Cooks Kingdom</title>

</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <!-- <a class="navbar-brand" href="#">Cooks Kingdom</a> -->
        <a class="navbar-brand" href="/">
          <img src="https://github.com/HishamWattar/cooks-kingdom/raw/main/src/assets/logo.png" alt="" width="30px" height="24px" class="d-inline-block align-text-top">
          Cooks Kingdom
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <% if (user) { %>
          <!-- User is logged in -->
          <div class="user-info">
            <% if (user.avatar) { %>
            <img src="<%= user.avatar %>" alt="Profile Picture">
            <% } %>  
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cart">Cart</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/orders">Orders</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
        <% } else { %>
          <!-- User is not logged in -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup">Signup</a>
              </li>  
            </ul>
          </div>
        <% } %>  
      </div>
    </nav>
  </header>
  <header>
    <a href="/"> <h1>Cooks Kingdom</h1></a>
   
    <% if (user) { %>
      <!-- User is logged in -->
      <div class="user-info">
        <% if (user.avatar) { %>
        <img src="<%= user.avatar %>" alt="Profile Picture">
        <% } %>  
      
        <a href="#" id="welcomeLink">Welcome, <%= user.username %></a>
        <div id="userDropdown" style="display: none;">
          <a href="/profile">Profile</a>
          <a href="/cart">Cart</a>
          <a href="/order">Orders</a>
          <a href="/logout">Logout</a>
        </div>
      </div>
    <% } else { %>
      <!-- User is not logged in -->
      <div class="auth-buttons">
        <a href="/login">Login</a>
        <a href="/signup">Signup</a>
      </div>
    <% } %>  
  </header>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
<script>

  // When the Welcome link is clicked, toggle the visibility of the dropdown menu
  document.getElementById('welcomeLink').addEventListener('click', function() {
    var dropdown = document.getElementById('userDropdown');
    dropdown.style.display = dropdown.style.display === 'none' ? 'flex' : 'none';
  });

  // Hide the dropdown when clicking outside the user-info element
  document.addEventListener('click', function(event) {
    var dropdown = document.getElementById('userDropdown');
    var userElem = document.querySelector('.user-info');

    if (!userElem.contains(event.target)) {
      dropdown.style.display = 'none';
    }
  });
</script>
</html>
